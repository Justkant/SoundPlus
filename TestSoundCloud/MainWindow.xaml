<Window x:Class="TestSoundCloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SoundPlus" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="582" Width="1200" xmlns:my="clr-namespace:TestSoundCloud">
    <Grid>
        <Grid.Resources>
            
            <!-- Middle Button(s) Template -->
            <ControlTemplate x:Key="ToggleButton" TargetType="{x:Type ToggleButton}">
                
            </ControlTemplate>
        </Grid.Resources>

        <Grid Height="33" Name="stackPanel1" VerticalAlignment="Top" Background="#FFD1D1D1">
            <StackPanel Orientation="Horizontal">
                <TextBox Height="23" Margin="6,6,0,0" Name="textBoxSearch" VerticalAlignment="Top" HorizontalAlignment="Left" Width="212" KeyDown="textBoxSearch_KeyDown" />
                <RadioButton Content="Tracks" Height="16" Name="radioButtonTracks" Padding="0" Margin="5,0" />
                <RadioButton Content="Playlists" Height="16" Name="radioButtonPlaylists" Padding="0" Margin="5,0" />
                <RadioButton Content="Users" Height="16" Name="radioButtonUsers" Padding="0" Margin="5,0" />
            </StackPanel>
        </Grid>
        <Grid Margin="0,33,0,31" Name="stackPanel2" Background="#FFEDEDED" SizeChanged="stackPanel2_SizeChanged">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="3"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="3"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0" Height="Auto" HorizontalAlignment="Stretch" Name="listBoxResult" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch" MouseUp="listBoxResult_MouseUp" />
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"></GridSplitter>
            <my:UserControlTrackPreview Grid.Column="2" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" x:Name="trackPreview" Width="Auto" VerticalAlignment="Top" Height="479"></my:UserControlTrackPreview>
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch"></GridSplitter>
            <ListBox Grid.Column="4" Height="Auto" HorizontalAlignment="Stretch" Name="listBoxDownload" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" MouseUp="listBoxResult_MouseUp" />

        </Grid>
        <Grid Name="stackPanel3" Background="#FFD1D1D1" Height="33" VerticalAlignment="Bottom"></Grid>
    </Grid>
</Window>
