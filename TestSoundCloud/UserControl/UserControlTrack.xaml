<UserControl x:Class="TestSoundCloud.UserControlTrack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="50" d:DesignWidth="181">
    <Grid>
        <Label Content="author" HorizontalAlignment="Left" Name="labelAuthor" FontSize="11" Height="28" VerticalAlignment="Bottom" Margin="47,0,0,-3" />
        <Label Content="Title - Ma bite" Height="28" HorizontalAlignment="Left" Name="labelTitle" VerticalAlignment="Top" FontWeight="Bold" Margin="47,-3,0,0" />
        <Label Content="5:32" FontSize="11" Height="28" HorizontalAlignment="Right" Name="labelDuration" VerticalAlignment="Top" Margin="0,-2,0,0"></Label>
        <Button Content="DL" Name="buttonDownload" AllowDrop="False" BorderBrush="{x:Null}" HorizontalAlignment="Right" Width="47" Height="19" VerticalAlignment="Bottom" Margin="0,0,0,3" Click="buttonDownload_Click" />
        <Image HorizontalAlignment="Left" Name="image" Stretch="Fill" Width="47" Height="47" VerticalAlignment="Top" />
    </Grid>
</UserControl>
